<%= simple_form_for @todo, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :item %>
  <%= f.input :completed_at %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                todos_path, :class => 'btn' %>
  </div>
<% end %>
