<h1>Sign Up</h1>

<%= simple_form_for(@user, html: { class: "form-horizontal"}) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <div class="form-actions">
  <%= f.button :submit, class: "btn-primary"%>
  <%= submit_tag 'Cancel', type: 'reset', class: 'btn btn-danger'%>
  </div>
<% end %>
